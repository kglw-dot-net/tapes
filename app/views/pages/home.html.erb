<div class="container mx-auto px-5">
  <div class="card bg-base-100 shadow-xl mb-5">
    <div class="card-body pb-0 pt-5 px-3">
      <h3 class="card-title mb-2 text-black dark:text-white flex px-2">
        <span class="grow">Latest shows</span>
        <a href="/<%= @latest_year %>" class="text-end text-primary">&raquo; See all from <%= @latest_year %></a>
      </h3>

      <div class="responsive-grid text-center pb-3">
        <% @most_recent_shows.each do |show| %>
          <%= render "featured_show", show: show %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card bg-base-100 shadow-xl mb-5">
    <div class="card-body pb-0 pt-5 px-3">
      <h3 class="card-title mb-2 text-black dark:text-white flex px-2">
        <span class="grow">Random shows</span>
        <a href="/" data-turbo-frame="random_shows" class="text-end text-primary">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
            stroke="currentColor" class="size-6 inline">
            <path stroke-linecap="round" stroke-linejoin="round"
              d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0 3.181 3.183a8.25 8.25 0 0 0 13.803-3.7M4.031 9.865a8.25 8.25 0 0 1 13.803-3.7l3.181 3.182m0-4.991v4.99" />
          </svg>

          Reload
        </a>
      </h3>

      <%= turbo_frame_tag "random_shows" do %>
        <div class="responsive-grid text-center pb-3">
          <% @random_shows.each do |show| %>
            <%= render "featured_show", show: show %>
          <% end %>
        </div>
      <% end %>

      <div class="pointer-events-none absolute inset-0 z-10 flex items-center justify-center bg-gray-100 bg-opacity-25 dark:bg-gray-900 dark:bg-opacity-25 opacity-0 [[busy]~&]:opacity-100 backdrop-blur transition-opacity">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 animate-spin">
          <path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0 3.181 3.183a8.25 8.25 0 0 0 13.803-3.7M4.031 9.865a8.25 8.25 0 0 1 13.803-3.7l3.181 3.182m0-4.991v4.99" />
        </svg>
      </div>
    </div>
  </div>

  <% if @today_shows.any? %>
    <div class="card bg-base-100 shadow-xl mb-5">
      <div class="card-body pb-0 pt-5 px-3">
        <h3 class="card-title mb-2 text-black dark:text-white flex px-2">
          <span class="grow">Today in Gizztory&mdash;<%= Date.today.strftime("%B %d") %></span>
          <a href="<%= Date.today.strftime("/%B/%d").downcase %>" class="text-end text-primary">&raquo; View all</a>
        </h3>

        <div class="responsive-grid text-center pb-3">
          <% @today_shows.each do |show| %>
            <%= render "featured_show", show: show %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>