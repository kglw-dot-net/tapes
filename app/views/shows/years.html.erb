<div class="container mx-auto mt-8 px-5">
    <div class="flex justify-center mb-8">
        <div role="tablist" class="tabs tabs-boxed">
            <% @years.order(:year).reverse.each do |year| %>
                <a href="/<%= year.year %>" class="tab"><%= year.year %></a>
            <% end %>
        </div>
    </div>

    <h2 class="text-3xl font-bold mb-3 text-center text-black dark:text-white">All Shows by Year</h2>
    <h3 class="text-2xl font-bold mb-8 text-center">Total Shows: <%= @years.sum(&:show_count) %></h3>
    
    <div class="responsive-grid bg-base-100 rounded-xl shadow-xl p-5">
        <% @years.each do |year| %>
            <a href="/<%= year.year %>" class="featured-item">
                <div class="indicator w-full">
                    <img src="<%= year.poster_url.blank? ? asset_path('missing.png') : year.poster_url %>" />
                </div>
        
                <h4 class="text-primary mt-1"><%= year.year %></h4>
                <small><%= year.show_count %> show<%= 's' unless year.show_count == 1 %></small>
            </a>
        <% end %>
    </div>
</div>
