<div class="container mx-auto mt-16 px-5">
    <h2 class="text-3xl font-bold mb-3 text-center">All Shows by Year</h2>
    <h3 class="text-2xl font-bold mb-16 text-center">Total Shows: <%= @years.sum(&:show_count) %></h3>
    
    <div class="responsive-grid">
        <% @years.each do |year| %>
            <a href="/<%= year.year %>" class="basis-0 grow hover:bg-white/5 transition py-3 px-2 rounded text-center">
                <div class="indicator w-full">
                    <img src="<%= year.poster_url.blank? ? asset_path('missing.png') : year.poster_url %>" />
                </div>
        
                <h4 class="text-primary mt-1"><%= year.year %></h4>
                <small><%= year.show_count %> show<%= 's' unless year.show_count == 1 %></small>
            </a>
        <% end %>
    </div>
</div>
