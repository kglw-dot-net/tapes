{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "exclude": [
    "node_modules"
  ],
  "paths": {
    // workaround for: https://github.com/vitest-dev/vitest/issues/4567
    "rollup/parseAst": ["./node_modules/rollup/dist/parseAst"]
  }
}